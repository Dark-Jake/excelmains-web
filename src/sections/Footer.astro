---
import ThemeToggle from "@/components/ThemeToggle.astro";
import DiscordIcon from "@/icons/discord.astro";
import KofiIcon from "@/icons/kofi.astro";
---

<footer
  class="mt-20 w-full border-primary border-t-2 flex flex-col md:flex-row place-items-center md:justify-between pt-6 pb-20"
>
  <span class="text-primary text-center">
    &copy; 2024 Excelverso <span aria-hidden="true" class="hidden md:inline"
      >|</span
    ><br aria-hidden="true" class="block md:hidden" /> Todos los derechos reservados.
  </span>
  <nav>
    <ul
      class="flex flex-row gap-x-6 items-center"
      aria-label="redes sociales y botón para alternar tema"
    >
      <li>
        <a
          target="_blank"
          rel="noopener"
          aria-label="Apoya a DarkJake en Ko-fi, se abrirá en una nueva pestaña"
          href="https://ko-fi.com/darkjake"
          class="hover:scale-125 hover:opacity-70 transition inline-block"
        >
          <KofiIcon class="text-primary" />
        </a>
      </li>
      <li>
        <a
          target="_blank"
          rel="noopener"
          aria-label="Discord del Excelverso, se abrirá en una nueva pestaña"
          href="https://discord.com/invite/YENa4TDxhu"
          class="hover:scale-125 hover:opacity-70 transition inline-block"
        >
          <DiscordIcon class="text-primary" />
        </a>
      </li>
      <li>
        <ThemeToggle />
      </li>
    </ul>
  </nav>
</footer>
